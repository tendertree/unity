using Unity.Entities;
using Unity.Mathematics;

// Pet의 기본 속성을 정의하는 컴포넌트
public struct Pet : IComponentData
{
    public float3 HomePosition;
    public Entity Owner;
    public float Energy;
    public float Happiness;
    public PetState CurrentState;
}

// Pet의 상태를 나타내는 열거형
public enum PetState
{
    Idle,
    GoingHome,
    FollowingOwner
}

// Utility AI를 위한 점수를 저장하는 컴포넌트
public struct PetUtilityScores : IComponentData
{
    public float IdleScore;
    public float GoHomeScore;
    public float FollowOwnerScore;
}

// Pet의 현재 목표 위치를 저장하는 컴포넌트
public struct PetTargetPosition : IComponentData
{
    public float3 Value;
}

// Pet이 이동 중인지 나타내는 태그 컴포넌트
public struct PetMoving : IComponentData { }